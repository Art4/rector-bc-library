{
  "name": "art4/rector-bc-library",
  "description": "Reusable Rector rule set for BC-related transformations",
  "version": "1.0.0",
  "type": "library",
  "keywords": ["rector", "ruleset", "library", "BC", "backward compatibility"],
  "readme": "README.md",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Artur Weigandt",
      "email": "artur@wlabs.de",
      "homepage": "https://wlabs.de",
      "role": "Maintainer"
    }
  ],
  "support": {
    "issues": "https://gitlab.com/Art4/rector-bc-library"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": "^7.4 || ^8.0",
    "rector/rector": "^2.2"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.92",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-phpunit": "^2.0",
    "phpunit/phpunit": "^9.5 || ^10.5 || ^11.5 || ^12.5"
  },
  "autoload": {
    "psr-4": {
      "Art4\\RectorBcLibrary\\": "src/"
    }
  },
  "config": {
    "lock": false,
    "sort-packages": true
  },
  "scripts": {
    "coverage": "export XDEBUG_MODE=coverage && vendor/bin/phpunit --coverage-html=build/coverage --coverage-clover=build/coverage/clover.xml",
    "cs": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php",
    "cs:check": "@cs --diff --dry-run",
    "test": [
      "@phpunit",
      "@phpstan",
      "@cs:check"
    ],
    "phpstan": "vendor/bin/phpstan analyse --configuration=.phpstan.neon --memory-limit=512M",
    "phpunit": "vendor/bin/phpunit --configuration=./phpunit.xml.dist --colors=always"
  }
}
